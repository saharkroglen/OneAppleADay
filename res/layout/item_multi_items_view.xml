<?xml version="1.0" encoding="utf-8"?>
<com.shoogisoft.oneappleaday.controls.RectangleRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tileShare"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tile_white_selector"
    android:clickable="false"
    android:paddingBottom="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_media" 
            android:clickable="true"
            />

        <TextView
            android:id="@+id/txtItemTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"            
            android:ellipsize="end"
            android:gravity="center|top"
            android:lineSpacingExtra="0dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:singleLine="false"
            android:maxLines="3"
            android:text="Title"
            android:textColor="#939393"
            android:textSize="12sp"
            android:textStyle="normal" />
    </LinearLayout>

</com.shoogisoft.oneappleaday.controls.RectangleRelativeLayout>